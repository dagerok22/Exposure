<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Lorem"
        android:textColor="@color/add_task_activity_rules"
        android:textSize="@dimen/add_task_activity_rules_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/Lorem"
        android:textColor="@color/add_task_activity_rules"
        android:textSize="@dimen/add_task_activity_rules_size" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/make_new_task"
        android:layout_width="@dimen/default_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_margin="@dimen/button_layout_margin_main_screen"
        android:paddingBottom="@dimen/button_padding_bottom"
        android:paddingEnd="@dimen/button_padding_right"
        android:paddingStart="@dimen/button_padding_left"
        android:paddingTop="@dimen/button_padding_top"
        fancy:fb_borderColor="@color/colorPrimary"
        fancy:fb_borderWidth="@dimen/button_border_width"
        fancy:fb_defaultColor="@color/defaultButtonBackgroundColor"
        fancy:fb_focusColor="@color/focusButtonBackgroundColor"
        fancy:fb_radius="30dp"
        fancy:fb_text="@string/add_new_task"
        fancy:fb_textColor="@color/colorPrimary" />
</LinearLayout>
